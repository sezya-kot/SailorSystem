<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingTop="15dp" >

    <Button
        android:id="@+id/createNewBt"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:background="@drawable/green_button_bkgr"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_create_new"
        android:paddingRight="5dp"
        android:text="@string/create_new"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/listBt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginLeft="30dp"
        android:background="@drawable/orange_btn_bgrd"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_list"
        android:text="@string/list"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout><!-- From: file:/D:/GoogleDrive/GitHub/Sailor/Sailor/res/layout/create_and_list_buttons.xml -->