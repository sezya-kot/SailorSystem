<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TableLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                <TableRow android:layout_marginBottom="15dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/company"
                            android:textStyle="bold"
                            android:layout_marginRight="100dp"
                            android:textColor="@color/blue"
                            android:textSize="15sp"
                            />
                    <TextView
                            android:id="@+id/oc_company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="n/a"
                            />
                </TableRow>
                <TableRow android:layout_marginBottom="15dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="@string/date_"
                            />
                    <TextView
                            android:id="@+id/oc_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="n/a"
                            />
                </TableRow>
                <TableRow android:layout_marginBottom="15dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="@string/slip_number_"
                            />
                    <TextView
                            android:id="@+id/oc_slip_number"
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="n/a"
                            />
                </TableRow>
                <TableRow android:layout_marginBottom="15dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="@string/creted_by_"
                            />
                    <TextView
                            android:id="@+id/oc_created_by"
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="n/a"
                            />
                </TableRow>
                <TableRow android:layout_marginBottom="15dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="@string/description_"
                            />
                    <TextView
                            android:id="@+id/oc_description"
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:maxLines="5"
                            android:layout_height="wrap_content"
                            android:text="n/a"
                            />
                </TableRow>

            </TableLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgrey"
                    android:orientation="vertical"
                    >
                <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="@string/bond_card_issuers_name_"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/issuer_name"
                            android:text="n/a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="@string/card_guarantors_name_"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/guarantor_name"
                            android:text="n/a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="@string/bond_sn"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/serial_number"
                            android:text="n/a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="@string/bond_due_date_"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/due_date"
                            android:text="n/a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text="@string/payment_amount_"
                        />
                <TextView
                        android:id="@+id/payment_amount"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="5"
                        android:layout_height="wrap_content"
                        android:text="n/a"
                        />
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="2dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="20dp"
                  android:background="@color/lightgrey"/>
            <Button
                    android:id="@+id/create_button"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/green_button_bkgr"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@string/create"
                    />
        </LinearLayout>
    </ScrollView>
