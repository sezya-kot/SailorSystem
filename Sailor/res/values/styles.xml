<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
        
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="list_menu_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">11dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="title_style">
        <item name="android:textColor">@android:color/white</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">9dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:background">@drawable/main_menu_item_bckg</item>
    </style>
    
    <style name="subtitle_style">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/darkgrey</item>
        
    </style>
    
	<style name = "linear_layout_wrapper">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:layout_marginLeft">@dimen/margin_size</item>
	    <item name="android:layout_marginRight">@dimen/margin_size</item>
	    <item name="android:layout_marginBottom">@dimen/margin_size</item>
	    <item name="android:orientation">vertical</item>
	</style>    
	
	<style name="black_wrapper">
	    <item name="android:layout_width">@dimen/zero</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">@color/black</item>
	    <item name="android:padding">@dimen/margin_size</item>
	</style>
	
	<style name="grey_wrapper">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@color/grey</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:orientation">horizontal</item>
	    <item name="android:padding">@dimen/grey_wrap_padding</item>
	</style>
	
	<style name="grey_divider">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">@dimen/margin_size</item>
	    <item name="android:background">@color/divider_line</item>
	</style>
	
	<style name="SailorRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
	   <item name="android:layout_marginBottom">5dp</item>
	   <item name="android:textStyle">bold</item>
	   <item name="android:textSize">20sp</item>
	</style>

</resources>
